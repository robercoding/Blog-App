<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ripple_effect">

    <ImageView
        android:id="@+id/adapter_settings_list_row_option_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_report"
        android:tint="@color/grayLight"
        android:layout_marginStart="20dp"/>


    <TextView
        android:id="@+id/adapter_settings_list_row_option_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/adapter_settings_list_row_option_icon"
        android:textSize="16dp"
        android:textStyle="bold"
        android:text="Option"
        android:textColor="@color/white"
        android:layout_marginStart="10dp"
        android:padding="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>