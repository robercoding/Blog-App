<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <Transition
        app:duration="3000"
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end">
        <OnSwipe
            app:touchAnchorId="@+id/space"
            app:dragDirection="dragDown"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/profile_detail_refresh_user"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"
            />

        <Constraint
            android:id="@+id/uid_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            app:layout_constraintTop_toBottomOf="@id/profile_detail_refresh_user"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp" />
        <Constraint
            android:id="@+id/uid_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/uid_image"
            android:layout_marginStart="30dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />
        <Constraint
            android:id="@+id/profile_detail_button_edit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_detail_refresh_user"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            android:visibility="gone"/>
        <Constraint
            android:id="@+id/profile_detail_button_follow"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_detail_refresh_user"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:visibility="gone"/>
<!--        <Constraint-->
<!--            android:id="@+id/uid_biography"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginEnd="20dp"-->
<!--            app:layout_constraintTop_toBottomOf="@id/uid_name"-->
<!--            android:layout_marginStart="30dp"-->
<!--            android:layout_marginTop="15dp" />-->
        <Constraint
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uid_name"/>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/profile_detail_refresh_user"
            android:layout_height="40dp"
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible"/>

        <Constraint
            android:id="@+id/profile_detail_button_edit"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_detail_refresh_user"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"/>

        <Constraint
            android:id="@+id/profile_detail_button_follow"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/profile_detail_refresh_user"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"/>

        <Constraint
            android:id="@+id/uid_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toBottomOf="@id/profile_detail_refresh_user"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"/>

        <Constraint
            android:id="@+id/uid_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uid_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"/>

<!--        <Constraint-->
<!--            android:id="@+id/uid_biography"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="35dp"-->
<!--            android:layout_marginStart="30dp"-->
<!--            android:layout_marginEnd="20dp"/>-->

        <Constraint
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uid_name"/>

    </ConstraintSet>
</MotionScene>