<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:motion="http://schemas.android.com/tools">

    <Transition
        app:duration="1000"
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end">
        <OnSwipe
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@+id/swipe_refresh_layout"
            app:touchAnchorSide="top"
            app:dragDirection="dragUp"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/uid_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/uid_image"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            >
            <CustomAttribute
                motion:attributeName="textSize"
                app:customFloatValue="16"
                app:attributeName="textSize"/>
        </Constraint>

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

<!--        <Constraint android:id="@+id/container_user_details"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="100dp"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            />-->

        <Constraint
            android:id="@+id/profile_detail_button_edit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="30dp"
            android:text="Edit profile"/>

        <Constraint
            android:id="@+id/uid_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            />

        <Constraint
            android:id="@+id/uid_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/uid_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            android:layout_marginStart="15dp"
            android:gravity="start"
            >
            <CustomAttribute
                motion:attributeName="textSize"
                app:customFloatValue="18"
                app:attributeName="textSize"/>
        </Constraint>


        <Constraint
            android:id="@+id/uid_biography"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:alpha="0"
            app:layout_constraintTop_toBottomOf="@id/uid_image"
            />

        <Constraint
            android:id="@+id/uid_following"
            android:layout_width="100dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/uid_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            />

        <Constraint
            android:id="@+id/uid_followers"
            android:layout_width="100dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/uid_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            />

        <Constraint
            android:id="@+id/divider_profile"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintTop_toBottomOf="@+id/uid_following"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            style="@style/Divider"/>

        <Constraint
            android:id="@+id/container_user_tabs"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/divider_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/background"
            app:tabTextColor="@color/white"
            />

        <Constraint
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/container_user_tabs"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <Constraint
            android:id="@+id/recycler_profile_detail_posts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:scrollbarSize="2dp"
            />
    </ConstraintSet>
</MotionScene>