<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:duration="1000"
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end">
        <OnSwipe
            app:moveWhenScrollAtTop="true"
            app:touchAnchorId="@+id/recycler_feed"
            app:touchAnchorSide="top"
            app:dragDirection="dragUp"/>
    </Transition>

    <ConstraintSet android:id="@+id/start">

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint android:id="@+id/container_user_details"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Constraint android:id="@+id/uid_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/uid_image"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:text="Name"
            android:gravity="start"
            style="@style/PostUserName"
            />

        <Constraint android:id="@+id/uid_followers"
            android:alpha="0"
            android:layout_width="100dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/uid_biography"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:text="10 followers"
            style="@style/PostText"/>
    </ConstraintSet>
</MotionScene>