<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blueTwitter</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/blueTwitter</item>
    </style>

    <style name="TopBar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/blueTwitter</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="PostBackground">
        <item name="android:background"> @color/background </item>
    </style>

    <style name="PostUserName">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PostTitle">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PostText">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SearchUserUnfocused">
<!--        <item name="background">@drawable/search_user_selector</item>-->
        <item name="android:layout_marginStart"> 10dp </item>
    </style>

    <style name="SearchUserFocused">
<!--        <item name="background">@drawable/layout_bg_login_register</item>-->
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="ProfileDetailEditButtonEditProfile" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/grayLight</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@color/background</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@color/grayLight</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="ProfileDetailEditButtonFollow" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/blueGray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AuthTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/text_input_text_hint</item>
        <item name="android:textColorHint">@color/text_input_text_hint</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>